<resources xmlns:tools="http://schemas.android.com/tools">

    <color name="color_primary_A">#48BEFF</color>
    <color name="color_primary_B">#166088</color>
    <color name="color_primary_C">#F7FFF7</color>
    <color name="color_secondary_A">#FF9F1C</color>
    <color name="color_secondary_B">#DBE9EE</color>

    <!-- Base application theme. -->
    <style name="Theme.RestaurantReservationApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary_A</item>
        <item name="colorPrimaryVariant">@color/color_primary_B</item>
        <item name="colorOnPrimary">@color/color_primary_C</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary_A</item>
        <item name="colorSecondaryVariant">@color/color_secondary_B</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="android:windowActivityTransitions">true</item>

    </style>
</resources>